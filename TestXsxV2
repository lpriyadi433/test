-- Inisialisasi Rayfield
local Rayfield = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Rayfield/main/source"))()

local Window = Rayfield:CreateWindow({
    Name = "Infinite Yield Admin",
    LoadingTitle = "Loading Admin Scripts...",
    ThemeColor = Color3.fromRGB(255, 0, 0)
})

-- Pastikan tabel Commands berisi semua perintah Infinite Yield
-- Contoh: _G.Commands = {["invisfling"] = {...}, ["fly"] = {...}, ...}

-- Fungsi untuk menambahkan tombol perintah
local function AddCommandButton(name, commandName)
    Window:CreateButton({
        Name = name,
        Callback = function()
            local plr = game.Players.LocalPlayer
            local command = _G.Commands and _G.Commands[commandName]
            if command and command.Function then
                command.Function(plr, {})
            else
                warn("Perintah "..commandName.." tidak ditemukan!")
            end
        end
    })
end

-- Tambahkan tombol perintah
AddCommandButton("Toggle InvisFling", "invisfling")
AddCommandButton("Fly", "fly")
AddCommandButton("God Mode", "god")
AddCommandButton("Noclip", "noclip")
AddCommandButton("Teleport to Player", "tpto") -- jika ada
AddCommandButton("Bring Player", "bring")       -- jika ada

-- Tambahkan tombol tambahan lain sesuai kebutuhan
Window:CreateButton({
    Name = "Reset Character",
    Callback = function()
        local plr = game.Players.LocalPlayer
        if plr.Character then
            plr.Character:BreakJoints()
        end
    end
})
